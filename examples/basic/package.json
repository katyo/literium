{
  "name": "@literium/example-basic",
  "version": "0.0.3",
  "description": "The simple usage example of the Literium Web-framework.",
  "scripts": {
    "compile": "ts-node src/html && rollup -c",
    "watch": "rollup -c -w",
    "clean": "rm -rf dist",
    "start": "ts-node src/server.ts start 8182",
    "stop": "ts-node src/server.ts stop 8182",
    "postinstall": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/katyo/literium/tree/master/examples/basic"
  },
  "keywords": [
    "example",
    "client",
    "server",
    "literium",
    "framework",
    "demo"
  ],
  "author": "K. <kayo@illumium.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katyo/literium/issues"
  },
  "devDependencies": {
    "@types/node": "^8",
    "autoprefixer": "^9",
    "cssnano": "^4",
    "node-sass": "^4",
    "node-zopfli": "^2",
    "postcss": "^6",
    "rollup": "^0.65",
    "rollup-plugin-gzip": "^1",
    "rollup-plugin-make": "^3",
    "rollup-plugin-node-resolve": "^3",
    "rollup-plugin-postcss": "^1",
    "rollup-plugin-replace": "^2",
    "rollup-plugin-sourcemaps": "^0.4",
    "rollup-plugin-typescript2": "^0.16",
    "rollup-plugin-uglify": "^4",
    "rollup-plugin-visualizer": "^0.9"
  },
  "dependencies": {
    "@literium/base": "file:../../base",
    "@literium/core": "file:../../core",
    "@literium/highlight": "file:../../highlight",
    "@literium/marklight": "file:../../marklight",
    "@literium/markup": "file:../../markup",
    "@literium/node": "file:../../node",
    "@literium/runner": "file:../../runner",
    "cutestrap": "^1",
    "highlight-ts": "^9",
    "marklit": "^0.2",
    "raf-polyfill": "^1",
    "ts-node": "^5",
    "tslib": "^1",
    "typescript": "^3"
  }
}
