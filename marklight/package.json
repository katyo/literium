{
  "name": "@literium/marklight",
  "version": "0.2.5",
  "description": "Markdown code highlight renderer for Literium web-framework.",
  "main": "index.js",
  "typings": "index.d.ts",
  "module": "es/index.js",
  "scripts": {
    "compile": "npm run compile-es && npm run compile-js",
    "clean": "npm run clean-es && npm run clean-js",
    "compile-es": "tsc --outDir es --module es6",
    "clean-es": "rm -rf es",
    "compile-js": "tsc --outDir .",
    "clean-js": "rm -rf *.d.ts *.js *.js.map",
    "prepare": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/katyo/literium/tree/master/marklight"
  },
  "keywords": [
    "markdown",
    "markup",
    "highlight",
    "render",
    "virtual-dom",
    "client",
    "server",
    "literium",
    "framework",
    "typescript",
    "es6",
    "es2015"
  ],
  "author": "K. <kayo@illumium.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katyo/literium/issues"
  },
  "devDependencies": {
    "@types/node": "^8",
    "typescript": "^3"
  },
  "dependencies": {
    "marklit": "^0.2",
    "@literium/core": "file:../core",
    "@literium/highlight": "file:../highlight",
    "@literium/markup": "file:../markup",
    "tslib": "^1"
  }
}
